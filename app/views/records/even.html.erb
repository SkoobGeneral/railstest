<p id="notice"><%= notice %></p>

<h1>Records</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Artist</th>
      <th>Year</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.title %></td>
        <td><%= record.artist %></td>
        <td><%= record.year %></td>
        <td><%= record.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>